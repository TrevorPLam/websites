# MCP Infrastructure Environment Variables Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================

# JWT Secret for enterprise-auth-gateway server
# Generate a secure random string: openssl rand -base64 32
JWT_SECRET=your-super-secure-jwt-secret-here

# =============================================================================
# EXTERNAL API TOKENS
# =============================================================================

# GitHub Personal Access Token for github-server
# Create at: https://github.com/settings/tokens
GITHUB_TOKEN=ghp_your_github_token_here

# Azure Token for azure-mcp server
# Get from Azure CLI: az account get-access-token
AZURE_TOKEN=your_azure_token_here

# Linear API Token for ticketer server
# Create at: https://linear.app/settings/api
LINEAR_TOKEN=lin_api_your_linear_token_here

# JIRA API Token for ticketer server  
# Create at: https://id.atlassian.com/manage-profile/security/api-tokens
JIRA_TOKEN=your_jira_token_here

# =============================================================================
# DATABASE CONNECTIONS
# =============================================================================

# PostgreSQL connection string for database operations
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://user:password@localhost:5432/mcp_db

# Redis connection for caching and session storage
REDIS_URL=redis://localhost:6379

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Log level for MCP servers (debug, info, warn, error)
LOG_LEVEL=debug

# Node environment
NODE_ENV=development

# Repository path for filesystem server
REPO_PATH=.

# =============================================================================
# OPTIONAL FEATURES
# =============================================================================

# Allow push operations for git server (set to false in production)
ALLOW_PUSH=false

# Read-only mode for filesystem server (recommended for production)
READ_ONLY_BY_DEFAULT=true

# =============================================================================
# SECURITY NOTES
# =============================================================================
# 1. Never commit actual secrets to version control
# 2. Use strong, unique secrets for each environment
# 3. Rotate secrets regularly (every 90 days recommended)
# 4. Use environment-specific values for dev/staging/prod
# 5. Consider using secret management services in production
