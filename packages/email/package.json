{
  "name": "@repo/email",
  "version": "0.1.0",
  "private": true,
  "description": "Multi-tenant email system with routing and unified send",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "default": "./dist/client.js"
    },
    "./templates": {
      "types": "./dist/templates.d.ts",
      "default": "./dist/templates.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "lint": "eslint src --max-warnings 0",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "react": "^19.0.0",
    "react-email": "^3.0.0",
    "nodemailer": "^6.9.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@repo/vitest-config": "workspace:*",
    "@types/node": "^20.11.17",
    "@types/react": "^19.0.0",
    "@types/nodemailer": "^6.4.0",
    "eslint": "^9.0.0",
    "typescript": "^5.3.3",
    "vitest": "^1.3.1"
  }
}
