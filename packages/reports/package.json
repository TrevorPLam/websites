{
  "name": "@repo/reports",
  "version": "0.1.0",
  "private": true,
  "description": "PDF report templates and rendering utilities",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./templates": {
      "types": "./dist/templates/index.d.ts",
      "default": "./dist/templates/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "lint": "eslint src --max-warnings 0",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@react-pdf/renderer": "^4.3.1",
    "react": "^19.1.1"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@repo/vitest-config": "workspace:*",
    "@types/node": "^20.11.17",
    "@types/react": "^19.0.0",
    "eslint": "^9.0.0",
    "typescript": "^5.3.3",
    "vitest": "^1.3.1"
  },
  "peerDependencies": {
    "react": "^19"
  }
}
