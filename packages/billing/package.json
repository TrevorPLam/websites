{
  "name": "@repo/billing",
  "version": "0.1.0",
  "private": true,
  "description": "Stripe billing integration with webhook handling and customer portal",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "/webhooks": {
      "types": "./dist/webhooks.d.ts",
      "default": "./dist/webhooks.js"
    },
    "/checkout": {
      "types": "./dist/checkout.d.ts",
      "default": "./dist/checkout.js"
    },
    "/portal": {
      "types": "./dist/portal.d.ts",
      "default": "./dist/portal.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "lint": "eslint src --max-warnings 0",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "stripe": "^16.12.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@repo/vitest-config": "workspace:*",
    "@types/node": "^20.11.17",
    "@types/stripe": "^8.0.417",
    "eslint": "^9.0.0",
    "typescript": "^5.3.3",
    "vitest": "^1.3.1"
  }
}
