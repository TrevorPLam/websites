{
  "name": "@repo/jobs",
  "version": "0.1.0",
  "private": true,
  "description": "Background job processing with QStash integration",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "/scheduler": {
      "types": "./dist/scheduler.d.ts",
      "default": "./dist/scheduler.js"
    },
    "/handlers": {
      "types": "./dist/handlers.d.ts",
      "default": "./dist/handlers.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "lint": "eslint src --max-warnings 0",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@upstash/qstash": "^2.7.0",
    "zod": "^3.22.4",
    "@react-pdf/renderer": "^4.3.1",
    "@repo/reports": "workspace:*",
    "react": "^19.1.1"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@repo/vitest-config": "workspace:*",
    "@types/node": "^20.11.17",
    "@types/react": "^19.0.0",
    "eslint": "^9.0.0",
    "typescript": "^5.3.3",
    "vitest": "catalog:"
  }
}
