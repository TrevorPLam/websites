{
  "extends": "@repo/typescript-config/base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "outDir": "./dist",
    "skipLibCheck": true,
    "paths": {
      "@repo/infra": ["../infra/index.ts"],
      "@repo/infra/*": ["../infra/*"],
      "@repo/ui": ["../ui/src/index.ts"],
      "@repo/ui/*": ["../ui/src/*"],
      "@repo/utils": ["../utils/src/index.ts"],
      "@repo/utils/*": ["../utils/src/*"],
      "@repo/types": ["../types/src/index.ts"],
      "@repo/types/*": ["../types/src/*"],
      "@repo/marketing-components": ["../marketing-components/src/index.ts"],
      "@repo/marketing-components/*": ["../marketing-components/src/*"],
      "@repo/features": ["../features/src/index.ts"],
      "@repo/features/*": ["../features/src/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "dist"]
}
