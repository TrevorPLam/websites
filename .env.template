# ============================================================================
# Environment Variables Template
# ============================================================================
# Copy this file to the appropriate environment:
#   - Development: cp .env.template .env.local
#   - Production: cp .env.template .env.production.local
#   - Staging: cp .env.template .env.staging.local
#
# All variables are OPTIONAL. The app runs with sensible defaults for local dev.
# Variables marked [PAIR] must both be set or both omitted.
#
# Source: packages/infra/env/schemas/*.ts
# ============================================================================

# --- Core Application ---
NODE_ENV=development
SITE_URL=http://localhost:3000
SITE_NAME="Marketing Website"

# --- Public (exposed to client bundle via NEXT_PUBLIC_ prefix) ---
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_SITE_NAME="Marketing Website"
NEXT_PUBLIC_ANALYTICS_ID=

# --- Analytics ---
ANALYTICS_ID=

# --- Sentry Error Tracking ---
# NEXT_PUBLIC_SENTRY_DSN is required for client-side error tracking
# SENTRY_AUTH_TOKEN is build-time only (no NEXT_PUBLIC_ prefix needed)
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_SAMPLE_RATE=1.0
# SENTRY_AUTH_TOKEN=  # Build-time only â€” used for source map uploads

# --- Supabase [PAIR] ---
# Both must be set together, or omit both for in-memory fallback
SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=

# --- HubSpot CRM ---
HUBSPOT_PRIVATE_APP_TOKEN=

# --- MCP (Model Context Protocol) ---
# Repository path for MCP filesystem and git servers
REPO_PATH=.

# Compliance and registry endpoints
COMPLIANCE_EMAIL=compliance@yourcompany.com
REGISTRY_ENDPOINT=https://registry.yourcompany.com

# GitHub token for MCP GitHub server
GITHUB_TOKEN=

# JWT secret for enterprise auth gateway (required in production)
JWT_SECRET=

# Redis URL for enterprise auth gateway persistence (optional)
# If not set, falls back to in-memory storage
REDIS_URL=

# Azure token for Azure MCP server
AZURE_TOKEN=

# Linear and JIRA tokens for ticketer server
LINEAR_TOKEN=
JIRA_TOKEN=

# --- Rate Limiting via Upstash Redis [PAIR] ---
# Both must be set together, or omit both for in-memory rate limiting
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# --- Booking Provider: Mindbody [PAIR] ---
MINDBODY_API_KEY=
MINDBODY_BUSINESS_ID=

# --- Booking Provider: Vagaro [PAIR] ---
VAGARO_API_KEY=
VAGARO_BUSINESS_ID=

# --- Booking Provider: Square [PAIR] ---
SQUARE_API_KEY=
SQUARE_BUSINESS_ID=

# ============================================================================
# PRODUCTION OVERRIDES
# ============================================================================
# For production deployments, override the above values:
#
# NODE_ENV=production
# SITE_URL=https://your-domain.com
# SITE_NAME="Your Production Site"
# NEXT_PUBLIC_SITE_URL=https://your-domain.com
# NEXT_PUBLIC_SITE_NAME="Your Production Site"
#
# Add production-specific secrets and API keys below:
# SENTRY_AUTH_TOKEN=your-production-sentry-token
# SUPABASE_URL=your-production-supabase-url
# SUPABASE_SERVICE_ROLE_KEY=your-production-supabase-key
# HUBSPOT_PRIVATE_APP_TOKEN=your-production-hubspot-token
# UPSTASH_REDIS_REST_URL=your-production-redis-url
# UPSTASH_REDIS_REST_TOKEN=your-production-redis-token

