{
  "name": "marketing-websites",
  "version": "1.0.0",
  "private": true,
  "description": "Multi-industry marketing website template system - monorepo for creating and managing client websites across all industries",
  "engines": {
    "node": ">=22.0.0"
  },
  "workspaces": [
    "packages/*",
    "packages/config/*",
    "packages/integrations/*",
    "packages/features/*",
    "packages/ai-platform/*",
    "packages/content-platform/*",
    "packages/marketing-ops/*",
    "packages/infrastructure/*",
    "clients/*",
    "tooling/*"
  ],
  "scripts": {
    "prepare": "husky || true",
    "changeset": "changeset",
    "dev": "turbo run dev",
    "build": "pnpm validate:turbo-cache-env && turbo run build",
    "lint": "turbo run lint",
    "type-check": "turbo run typecheck",
    "type-check:simple": "node scripts/type-check-all.js",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "test:coverage:enforce": "node scripts/testing/enforce-coverage.mjs",
    "test:coverage:critical": "node scripts/testing/enforce-coverage.mjs --phase PHASE_1",
    "test:coverage:report": "node scripts/testing/enforce-coverage.mjs --report-path ./coverage/report.json",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:codegen": "playwright codegen",
    "test:visual": "playwright test --config=e2e/playwright-visual.config.ts",
    "test:visual:ci": "playwright test --config=e2e/playwright-visual.config.ts --reporter=json",
    "test:visual:update": "playwright test --config=e2e/playwright-visual.config.ts --update-snapshots",
    "test:chaos": "playwright test --config=e2e/playwright-chaos.config.ts",
    "test:chaos:ci": "playwright test --config=e2e/playwright-chaos.config.ts --reporter=json",
    "test:contracts": "playwright test --config=e2e/playwright-contracts.config.ts",
    "test:contracts:ci": "playwright test --config=e2e/playwright-contracts.config.ts --reporter=json",
    "test:a11y": "npx tsx scripts/test/a11y-check.ts",
    "verify:phase1": "pnpm install && pnpm build && pnpm test",
    "validate:workspaces": "node scripts/validate-workspaces.js",
    "knip": "knip",
    "syncpack:check": "syncpack lint",
    "syncpack:fix": "syncpack fix && syncpack format",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "validate-docs": "node scripts/validate-documentation.js",
    "validate-docs:strict": "node scripts/validate-documentation.js --strict",
    "lint:docs": "markdownlint-cli \"**/*.md\" && .\\.local\\bin\\vale.exe docs/",
    "lint:docs:fix": "markdownlint-cli \"**/*.md\" --fix && .\\.local\\bin\\vale.exe docs/ --mode fix",
    "vale": ".\\.local\\bin\\vale.exe",
    "doctest": "node scripts/doctest/runner.mjs docs",
    "doctest:setup": "node scripts/doctest/setup.mjs all",
    "doctest:examples": "node scripts/doctest/setup.mjs examples",
    "test:docs-visual": "playwright test --config=playwright.docs.config.ts",
    "test:docs-visual:ci": "playwright test --config=playwright.docs.config.ts --reporter=json",
    "test:docs-visual:update": "playwright test --config=playwright.docs.config.ts --update-snapshots",
    "rag:init": "node scripts/rag/rag-pipeline.mjs init",
    "rag:search": "node scripts/rag/rag-pipeline.mjs search",
    "rag:ask": "node scripts/rag/rag-pipeline.mjs ask",
    "embedding:test": "node scripts/embedding-service.mjs test",
    "embedding:batch": "node scripts/embedding-service.mjs batch",
    "embedding:config": "node scripts/embedding-service.mjs config",
    "docs:health": "node scripts/docs-health-analyzer.mjs docs",
    "docs:health:report": "node scripts/docs-health-analyzer.mjs docs docs-health-report.json",
    "docs:validate": "pnpm lint:docs && pnpm doctest && pnpm docs:health",
    "playgrounds:generate": "node scripts/playgrounds/generator.mjs docs",
    "playgrounds:serve": "cd playgrounds && python -m http.server 8080",
    "i18n:init": "node scripts/i18n/infrastructure.mjs docs",
    "i18n:extract": "node scripts/i18n/scripts/extract.mjs",
    "i18n:translate": "node scripts/i18n/scripts/translate.mjs",
    "i18n:validate": "node scripts/i18n/scripts/validate.mjs",
    "i18n:configure": "node scripts/translation-config.mjs configure",
    "i18n:test": "node scripts/translation-config.mjs test",
    "backstage:init": "node scripts/backstage/integrator.mjs docs",
    "backstage:setup": "node scripts/backstage-setup.mjs setup",
    "backstage:start": "cd backstage && npm run dev",
    "backstage:build": "cd backstage && npm run build",
    "test:integration": "node scripts/integration-test.mjs all",
    "test:integration:foundation": "node scripts/integration-test.mjs foundation",
    "test:integration:automation": "node scripts/integration-test.mjs automation",
    "test:integration:intelligence": "node scripts/integration-test.mjs intelligence",
    "deploy:setup": "node scripts/deployment-setup.mjs setup",
    "deploy:production": "./deploy/scripts/deploy.sh production",
    "deploy:staging": "./deploy/scripts/deploy.sh staging",
    "check-review-schedule": "node scripts/check-review-schedule.js",
    "validate:exports": "node scripts/validate-exports.js",
    "validate:ui-exports": "node scripts/validate-ui-exports.js",
    "validate:marketing-exports": "node scripts/validate-marketing-exports.js",
    "validate:imports": "dependency-cruiser packages --config .dependency-cruiser.js",
    "check:types": "attw packages/*/package.json",
    "analyze:deps": "madge --circular packages/*/src",
    "lint:imports": "eslint packages --rule 'import/no-cycle: error'",
    "fix:security": "npx tsx scripts/batch-fixes/security-fixes.ts",
    "fix:components": "npx tsx scripts/batch-fixes/component-fixes.ts",
    "fix:types": "npx tsx scripts/batch-fixes/type-safety-fixes.ts",
    "fix:all": "npx tsx scripts/batch-fixes/run-all-fixes.ts",
    "madge:circular": "madge --circular packages/ clients/",
    "validate:circular": "pnpm madge:circular",
    "validate:budgets": "npx tsx scripts/perf/validate-budgets.ts",
    "health": "npx tsx scripts/health-check.ts",
    "doctor": "npx tsx scripts/doctor.ts",
    "ci:local": "npx tsx scripts/run-ci-local.ts",
    "setup-sentry-alerts": "node scripts/setup-sentry-alerts.js",
    "test-alerting": "node scripts/test-alerting-system.js",
    "validate-client": "npx tsx scripts/validate-client.ts",
    "validate-all-clients": "npx tsx scripts/validate-all-clients.ts",
    "program:wave0": "node scripts/operations/program-wave.js --wave 0",
    "program:wave1": "node scripts/operations/program-wave.js --wave 1",
    "program:wave2": "node scripts/operations/program-wave.js --wave 2",
    "program:wave3": "node scripts/operations/program-wave.js --wave 3",
    "version-packages": "pnpm changeset version && pnpm install --no-frozen-lockfile",
    "release": "pnpm changeset publish",
    "gen": "turbo gen",
    "create-client": "npx tsx tooling/create-client/src/index.ts",
    "generate-component": "npx tsx tooling/generate-component/src/index.ts",
    "validate-config": "npx tsx tooling/validation/src/validate-site-config.ts",
    "validate:configs": "pnpm --filter @repo/config-schema validate:configs && npx tsx scripts/check-config-conflicts.ts",
    "create-site": "pnpm create-client",
    "lint:fsd": "pnpm dlx steiger --config steiger.config.ts",
    "verify:file-headers": "node scripts/verify-file-headers.js",
    "verify:docstrings": "node scripts/verify-docstrings.js",
    "verify:comment-quality": "node scripts/verify-comment-quality.js --staged",
    "verify:comment-quality:ci": "node scripts/verify-comment-quality.js --ci",
    "metrics:code": "node scripts/track-code-metrics.js",
    "docs:links": "node scripts/docs/check-links.js",
    "docs:spelling": "node scripts/docs/check-spelling.js",
    "docs:quality": "pnpm docs:links && pnpm docs:spelling",
    "docs:formats": "node scripts/docs/verify-doc-formats.js",
    "docs:build": "node scripts/docs/build-docs-site.js",
    "verify:secrets": "node scripts/verify-staged-secrets.js",
    "lint:security": "npx @semgrep/cli semgrep --config .semgrep/security-rules.yml --error",
    "ai:log-composite": "node scripts/ai/log-composite-identity-action.mjs",
    "ai:validate-policy": "node scripts/ai/validate-ai-policy.mjs",
    "ai:adversarial": "node scripts/ai/run-adversarial-simulations.mjs",
    "ai:synthesize-requirements": "node scripts/ai/synthesize-requirements.mjs",
    "ai:flag-conflicts": "node scripts/ai/flag-requirement-conflicts.mjs",
    "test:self-healing": "node scripts/testing/self-healing-vitest.mjs",
    "test:ai-fuzz": "node scripts/testing/ai-fuzz-inputs.mjs",
    "tokens:generate": "node scripts/generate-design-tokens.mjs",
    "validate:fsd": "node scripts/validate-fsd-architecture.mjs",
    "ai:intelligent-rollback": "node scripts/ai/deploy-intelligent-rollback.mjs",
    "ai:predictive-maintenance": "node scripts/ai/enable-predictive-maintenance.mjs",
    "ai:technical-debt": "node scripts/ai/automate-technical-debt-reduction.mjs",
    "validate:turbo-cache-env": "node scripts/validation/validate-turbo-cache-env.mjs",
    "syncpack:lint": "syncpack lint",
    "syncpack:format": "syncpack format",
    "mcp:setup-dev": "node mcp/scripts/setup-development.js dev",
    "mcp:setup-prod": "node mcp/scripts/setup-development.js prod",
    "mcp:workflow": "node mcp/scripts/dev-workflow.js",
    "mcp:test": "node mcp/scripts/test-integration.js",
    "mcp:test-ai": "node mcp/scripts/test-ai-integration.js",
    "mcp:test-dev": "node mcp/scripts/test-development.js",
    "mcp:validate": "node mcp/scripts/validate-production.js",
    "mcp:start": "node mcp/scripts/dev-workflow.js start",
    "mcp:status": "node mcp/scripts/dev-workflow.js status",
    "mcp:clean": "node mcp/scripts/dev-workflow.js clean",
    "db:migrate": "./scripts/migrate-production.sh migrate",
    "db:rollback": "./scripts/migrate-production.sh rollback",
    "db:status": "./scripts/migrate-production.sh status",
    "db:validate": "psql ${DATABASE_URL} -f database/migrations/validation.sql",
    "db:backup": "pg_dump ${DATABASE_URL} --schema-only --no-owner > backups/manual-backup-$(date +%Y%m%d%H%M%S).sql"
  },
