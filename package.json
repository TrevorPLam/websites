{
  "name": "marketing-website-templates",
  "version": "1.0.0",
  "private": true,
  "description": "Multi-industry marketing website template system - monorepo for creating and managing client websites across all industries",
  "engines": {
    "node": ">=24.0.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "packages/config/*",
    "templates/*",
    "clients/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "test": "jest --maxWorkers=50%",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --maxWorkers=50%",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\""
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@typescript-eslint/eslint-plugin": "8.19.1",
    "@typescript-eslint/parser": "8.19.1",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "prettier": "3.2.5",
    "ts-jest": "^29.4.6",
    "turbo": "2.2.3",
    "typescript": "5.7.2"
  },
  "packageManager": "pnpm@10.29.2",
  "dependencies": {
    "server-only": "^0.0.1"
  }
}
