{
  "name": "marketing-website-templates",
  "version": "1.0.0",
  "private": true,
  "description": "Multi-industry marketing website template system - monorepo for creating and managing client websites across all industries",
  "engines": {
    "node": ">=22.0.0"
  },
  "workspaces": [
    "packages/*",
    "packages/config/*",
    "packages/integrations/*",
    "packages/features/*",
    "templates/*",
    "clients/*",
    "apps/*"
  ],
  "scripts": {
    "changeset": "changeset",
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "test": "jest --maxWorkers=50%",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --maxWorkers=50%",
    "verify:phase1": "pnpm install && pnpm build && pnpm test",
    "validate:workspaces": "node scripts/validate-workspaces.js",
    "knip": "knip",
    "syncpack:check": "syncpack list-mismatches",
    "syncpack:fix": "syncpack fix-mismatches",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "validate-exports": "node scripts/validate-exports.js",
    "version-packages": "pnpm changeset version && pnpm install --no-frozen-lockfile",
    "release": "pnpm changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.8",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@typescript-eslint/eslint-plugin": "8.19.1",
    "@typescript-eslint/parser": "8.19.1",
    "cross-env": "^10.1.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "knip": "^5.83.1",
    "prettier": "3.2.5",
    "syncpack": "13.0.4",
    "ts-jest": "^29.4.6",
    "turbo": "2.8.9",
    "typescript": "catalog:"
  },
  "packageManager": "pnpm@10.29.2",
  "dependencies": {
    "server-only": "^0.0.1"
  }
}
