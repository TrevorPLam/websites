# MCP Development Environment Configuration
# Development-specific settings for MCP servers

# Core Configuration
LOG_LEVEL=debug
AUDIT_ENABLED=true

# Development Security (relaxed for development)
READ_ONLY_BY_DEFAULT=false
AUDIT_FILE_ACCESS=true
ALLOW_PUSH=true

# Memory & Context
MEMORY_MODE=volatile
CONTEXT_RETENTION=1h
REASONING_DEPTH=deep

# Development Tools
DEV_TOOLS_ENABLED=true
HOT_RELOAD=true
DEBUG_MODE=true

# Performance (relaxed for development)
EDGE_ENABLED=false
RESPONSE_TARGET=<500ms
ZERO_TRUST=false
