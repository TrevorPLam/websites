{
  "servers": {
    "filesystem": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem", "c:/dev/marketing-websites"],
      "env": { "ALLOWED_DIRECTORIES": "c:/dev/marketing-websites", "READ_ONLY_BY_DEFAULT": "true" }
    },
    "git": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-git", "c:/dev/marketing-websites"],
      "env": { "GIT_REPO_PATH": "c:/dev/marketing-websites", "ALLOW_PUSH": "false" }
    },
    "everything": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-everything"],
      "env": { "LOG_LEVEL": "info" }
    },
    "sequential-thinking": {
      "command": "npx",
      "args": ["tsx", "packages/mcp-servers/src/sequential-thinking-fixed.ts"],
      "env": { "LOG_LEVEL": "debug" }
    },
    "github": {
      "command": "npx",
      "args": ["tsx", "packages/mcp-servers/src/github-server.ts"],
      "env": { "GITHUB_TOKEN": "${GITHUB_TOKEN}" }
    },
    "knowledge-graph": {
      "command": "npx",
      "args": ["tsx", "packages/mcp-servers/src/knowledge-graph-memory-fixed.ts"],
      "env": { "LOG_LEVEL": "debug" }
    },
    "enterprise-security": {
      "command": "npx",
      "args": ["tsx", "packages/mcp-servers/src/enterprise-security-gateway.ts"],
      "env": { "LOG_LEVEL": "debug" }
    },
    "multi-tenant": {
      "command": "npx",
      "args": ["tsx", "packages/mcp-servers/src/multi-tenant-orchestrator.ts"],
      "env": { "LOG_LEVEL": "debug" }
    },
    "observability": {
      "command": "npx",
      "args": ["tsx", "packages/mcp-servers/src/observability-monitor.ts"],
      "env": { "LOG_LEVEL": "debug" }
    },
    "enterprise-auth": {
      "command": "npx",
      "args": ["tsx", "packages/mcp-servers/src/enterprise-auth-gateway.ts"],
      "env": { "LOG_LEVEL": "debug" }
    },
    "secure-deployment": {
      "command": "npx",
      "args": ["tsx", "packages/mcp-servers/src/secure-deployment-manager.ts"],
      "env": { "LOG_LEVEL": "debug" }
    },
    "enterprise-registry": {
      "command": "npx",
      "args": ["tsx", "packages/mcp-servers/src/enterprise-registry.ts"],
      "env": { "LOG_LEVEL": "debug" }
    }
  }
}
