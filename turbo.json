{
  "$schema": "https://turbo.build/schema.json",
  "cacheDir": ".turbo",
  "globalEnv": [
    "NODE_ENV",
    "VERCEL",
    "VERCEL_ENV",
    "CI",
    "DATABASE_URL",
    "NEXT_PUBLIC_SITE_URL",
    "NEXT_PUBLIC_SUPABASE_URL",
    "NEXT_PUBLIC_SUPABASE_ANON_KEY",
    "NEXT_PUBLIC_SENTRY_DSN",
    "NEXT_PUBLIC_GA_MEASUREMENT_ID"
  ],
  "globalPassThroughEnv": ["NODE_OPTIONS", "AWS_*", "VERCEL_*", "OTEL_*", "SENTRY_AUTH_TOKEN"],
  "globalDependencies": [
    ".env",
    ".env.*",
    "tsconfig.json",
    "pnpm-workspace.yaml",
    "package.json",
    "pnpm-lock.yaml"
  ],
  "remoteCache": {
    "enabled": true,
    "signature": true
  },
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**", "build/**", "out/**"],
      "env": ["NEXT_PUBLIC_*", "DATABASE_URL", "SANITY_*", "STRIPE_*", "POSTMARK_*"],
      "cache": true,
      "inputs": [
        "src/**",
        "public/**",
        "package.json",
        "tsconfig.json",
        "next.config.*",
        "tailwind.config.*"
      ],
      "passThroughEnv": ["NODE_OPTIONS", "VERCEL_*", "OTEL_*", "SENTRY_*"]
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "cache": true,
      "outputs": ["*.tsbuildinfo"],
      "inputs": ["**/*.ts", "**/*.tsx", "tsconfig.json", "*.d.ts"]
    },
    "lint": {
      "dependsOn": [],
      "cache": true,
      "outputs": [],
      "inputs": [
        "**/*.ts",
        "**/*.tsx",
        "**/*.js",
        "**/*.jsx",
        "eslint.config.*",
        ".eslintrc.*",
        ".eslintignore"
      ]
    },
    "test": {
      "dependsOn": ["^build"],
      "cache": true,
      "outputs": ["coverage/**"],
      "env": ["NODE_ENV"],
      "inputs": [
        "**/*.test.ts",
        "**/*.test.tsx",
        "**/__tests__/**",
        "vitest.config.*",
        "jest.config.*"
      ]
    },
    "test:e2e": {
      "dependsOn": ["build"],
      "cache": false,
      "outputs": ["test-results/**", "playwright-report/**"],
      "env": ["PLAYWRIGHT_BASE_URL", "TEST_USER_EMAIL", "TEST_USER_PASSWORD"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"]
    },
    "clean": {
      "cache": false,
      "outputs": []
    },
    "validate:configs": {
      "dependsOn": [],
      "cache": true,
      "outputs": [],
      "inputs": ["clients/*/site.config.ts", "sites/*/site.config.ts"]
    },
    "lint:fsd": {
      "dependsOn": [],
      "cache": true,
      "outputs": []
    },
    "analyze": {
      "dependsOn": ["build"],
      "outputs": [".next/analyze/**"],
      "cache": true
    },
    "generate": {
      "cache": false
    },
    "format": {
      "cache": false,
      "inputs": ["src/**", "package.json", "*.{json,md,yml,yaml}"]
    },
    "format:check": {
      "cache": false,
      "inputs": ["src/**", "package.json", "*.{json,md,yml,yaml}"]
    },
    "tokens:generate": {
      "dependsOn": [],
      "cache": true,
      "outputs": ["packages/design-tokens/generated/**"],
      "inputs": ["packages/design-tokens/src/**", "scripts/generate-design-tokens.mjs"]
    },
    "validate:fsd": {
      "dependsOn": [],
      "cache": false,
      "outputs": [],
      "inputs": ["clients/**/src/**", "scripts/validate-fsd-architecture.mjs"]
    }
  }
}
