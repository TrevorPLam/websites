# =============================================================================
# MARKETING WEBSITES PLATFORM - ENVIRONMENT VARIABLES
# =============================================================================
# 
# This file contains all environment variables needed for development and production.
# Copy this file to .env.local and fill in your actual values.
#
# Variables marked with [REQUIRED] are mandatory for the application to function.
# Variables marked with [DEV] are development-only and can have placeholder values.
# Variables marked with [PROD] are production-specific and should be carefully configured.
#
# For development setup, run: pnpm setup
# For environment validation, run: pnpm verify
# =============================================================================

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# The base URL where the application is hosted
# [REQUIRED] Used for Next.js routing, OAuth callbacks, and CORS
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Node.js environment (development, staging, production)
# [REQUIRED] Controls feature flags, error reporting, and optimization
NODE_ENV=development

# Enable development mode features (hot reload, debug info, etc.)
# [DEV] Set to 'true' in development, 'false' in production
NEXT_PUBLIC_DEV_MODE=true

# Application version for cache busting and debugging
# [OPTIONAL] Auto-generated during build if not specified
APP_VERSION=1.0.0

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================

# Secret key for NextAuth.js JWT signing
# [REQUIRED] Must be at least 32 characters long, random string
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=your-super-secret-jwt-key-change-this-in-production

# URL where NextAuth.js is running
# [REQUIRED] Must match NEXT_PUBLIC_APP_URL in production
NEXTAUTH_URL=http://localhost:3000

# NextAuth.js provider configuration
# [DEV] Development OAuth providers (use test credentials)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# [PROD] Production OAuth providers
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Session configuration
# [OPTIONAL] How long sessions remain valid (in seconds)
NEXTAUTH_SESSION_MAX_AGE=86400

# =============================================================================
# DATABASE (SUPABASE)
# =============================================================================

# Supabase project URL
# [REQUIRED] Your Supabase project URL from dashboard.settings.supabase.com
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co

# Supabase service role key (server-side only)
# [REQUIRED] Has admin privileges, never expose to client
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Supabase anon key (client-side)
# [REQUIRED] Limited client access, safe to expose
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key

# Database connection string (alternative to Supabase client)
# [OPTIONAL] Use if connecting directly to PostgreSQL
DATABASE_URL=postgresql://user:password@localhost:5432/marketing_platform

# =============================================================================
# EXTERNAL SERVICES - PAYMENTS
# =============================================================================

# Stripe API keys for payment processing
# [REQUIRED] Get from stripe.com/dashboard
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key

# Stripe webhook endpoint secret
# [REQUIRED] For webhook signature verification
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# Stripe pricing configuration
# [OPTIONAL] Product and price IDs from Stripe dashboard
STRIPE_STARTER_PRICE_ID=price_starter_monthly
STRIPE_PRO_PRICE_ID=price_pro_monthly
STRIPE_ENTERPRISE_PRICE_ID=price_enterprise_monthly

# =============================================================================
# EXTERNAL SERVICES - EMAIL
# =============================================================================

# Resend API key for email sending
# [REQUIRED] Get from resend.com/dashboard
RESEND_API_KEY=re_your-resend-api-key

# Email configuration
# [OPTIONAL] Default from email address
RESEND_FROM_EMAIL=noreply@yourdomain.com
RESEND_FROM_NAME=Marketing Platform

# Email service provider (resend, sendgrid, ses)
# [OPTIONAL] Used for email service abstraction
EMAIL_PROVIDER=resend

# =============================================================================
# EXTERNAL SERVICES - ANALYTICS & MONITORING
# =============================================================================

# Tinybird API keys for real-time analytics
# [REQUIRED] Get from app.tinybird.co
TINYBIRD_HOST=https://api.tinybird.co
TINYBIRD_TOKEN=p_your-tinybird-token

# Sentry DSN for error monitoring
# [OPTIONAL] Get from sentry.io
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# Google Analytics 4
# [OPTIONAL] For website analytics
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Vercel Analytics
# [OPTIONAL] Built-in analytics for Vercel deployments
VERCEL_ANALYTICS_ID=your-vercel-analytics-id

# =============================================================================
# EXTERNAL SERVICES - AI & CONTENT
# =============================================================================

# OpenAI API for AI content generation
# [OPTIONAL] Get from platform.openai.com
OPENAI_API_KEY=sk-your-openai-api-key

# Anthropic Claude API for advanced AI features
# [OPTIONAL] Get from console.anthropic.com
ANTHROPIC_API_KEY=your-anthropic-api-key

# =============================================================================
# MULTI-TENANT & EDGE CONFIGURATION
# =============================================================================

# Vercel Edge Config for global configuration
# [OPTIONAL] For edge-side feature flags and tenant resolution
VERCEL_EDGE_CONFIG_ID=your-edge-config-id
VERCEL_EDGE_CONFIG_ACCESS_TOKEN=your-edge-config-token

# Redis for caching and session storage
# [OPTIONAL] For production caching and rate limiting
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================

# Test database configuration
# [DEV] Separate database for testing
TEST_DATABASE_URL=postgresql://test:test@localhost:5432/marketing_platform_test

# Enable test mode
# [DEV] Set to '1' during automated testing
TEST_MODE=0

# Mock external services in development
# [DEV] Set to 'true' to avoid real API calls in development
MOCK_EXTERNAL_SERVICES=true

# =============================================================================
# CONTENT & SEO
# =============================================================================

# Default site configuration
# [OPTIONAL] Can be overridden per tenant
DEFAULT_SITE_TITLE=Marketing Platform
DEFAULT_SITE_DESCRIPTION=Professional marketing websites for every industry
DEFAULT_SITE_KEYWORDS=marketing, websites, business, professional

# SEO configuration
# [OPTIONAL] For sitemap generation and SEO optimization
SITE_DOMAIN=localhost:3000
SITEMAP_CHANGE_FREQUENCY=weekly
SITEMAP_PRIORITY=0.8

# =============================================================================
# COMPLIANCE & PRIVACY
# =============================================================================

# Cookie consent configuration
# [OPTIONAL] For GDPR/CCPA compliance
COOKIE_CONSENT_ENABLED=true
COOKIE_CONSENT_DOMAIN=yourdomain.com

# Data retention settings
# [OPTIONAL] How long to retain user data (in days)
DATA_RETENTION_DAYS=365

# Privacy policy URL
# [OPTIONAL] Link to privacy policy
PRIVACY_POLICY_URL=/privacy

# =============================================================================
# INTEGRATION WEBHOOKS
# =============================================================================

# Webhook URLs for external integrations
# [OPTIONAL] Configure for third-party integrations
WEBHOOK_URL_SLACK=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
WEBHOOK_URL_DISCORD=https://discord.com/api/webhooks/YOUR/DISCORD/WEBHOOK

# Webhook signing secrets
# [OPTIONAL] For webhook signature verification
WEBHOOK_SECRET_SLACK=your-slack-webhook-secret
WEBHOOK_SECRET_DISCORD=your-discord-webhook-secret

# =============================================================================
# PERFORMANCE & OPTIMIZATION
# =============================================================================

# Image optimization
# [OPTIONAL] Image CDN configuration
NEXT_PUBLIC_IMAGE_DOMAIN=images.yourdomain.com
IMAGE_OPTIMIZATION_QUALITY=80

# Bundle analysis
# [OPTIONAL] For bundle size monitoring
BUNDLE_ANALYSIS_ENABLED=true
BUNDLE_SIZE_LIMIT_MB=5

# =============================================================================
# DEBUGGING & LOGGING
# =============================================================================

# Log level (error, warn, info, debug)
# [OPTIONAL] Controls verbosity of application logs
LOG_LEVEL=info

# Debug mode
# [DEV] Enable detailed debugging information
DEBUG=false

# Performance monitoring
# [OPTIONAL] Enable performance profiling
PERFORMANCE_PROFILING=false

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable features
# [OPTIONAL] Use for gradual rollouts and A/B testing
FEATURE_AI_CONTENT_GENERATION=true
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_MULTI_TENANT_ADMIN=true
FEATURE_CUSTOM_DOMAINS=false
FEATURE_BILLING_INTEGRATION=false

# =============================================================================
# MIGRATION & DEPLOYMENT
# =============================================================================

# Database migration configuration
# [OPTIONAL] For automated database migrations
MIGRATION_AUTO_RUN=false
MIGRATION_BACKUP_ENABLED=true

# Deployment configuration
# [OPTIONAL] For CI/CD pipelines
DEPLOYMENT_ENVIRONMENT=development
DEPLOYMENT_VERSION=1.0.0

# =============================================================================
# LOCAL DEVELOPMENT OVERRIDES
# =============================================================================
# 
# The following variables are typically set automatically during setup
# and should not need manual configuration in most cases.
#
# PORT=3000
# ADMIN_PORT=3001
# SUPABASE_PORT=54321
# REDIS_PORT=6379
#
# =============================================================================

# =============================================================================
# SETUP COMPLETE
# =============================================================================
#
# After configuring your environment variables:
# 1. Run: pnpm verify (to validate configuration)
# 2. Run: pnpm setup (to complete setup)
# 3. Run: pnpm dev (to start development)
#
# For help with configuration:
# - Check docs/getting-started/development-setup.md
# - Run: pnpm verify --help
# - Check AGENTS.md for AI agent guidelines
#
# =============================================================================
