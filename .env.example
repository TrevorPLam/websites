# Environment Configuration Template
# Copy this file to .env.local and fill in your values
# Note: Supabase and HubSpot variables are optional for local development
# They are only required for production deployments

# =============================================================================
# NEXT.JS
# =============================================================================
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NODE_ENV=development

# =============================================================================
# DATABASE (Supabase) - Optional for local development
# =============================================================================
# NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
# NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
# SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# =============================================================================
# HUBSPOT (CRM Integration) - Optional for local development
# =============================================================================
# HUBSPOT_PRIVATE_APP_TOKEN=your-hubspot-api-key-here

# =============================================================================
# UPSTASH (Rate Limiting & Cache) - Optional for local development
# =============================================================================
# UPSTASH_REDIS_REST_URL=https://your-region-your-ID.upstash.io
# UPSTASH_REDIS_REST_TOKEN=your-token-here

# =============================================================================
# ANALYTICS (Optional)
# =============================================================================
# NEXT_PUBLIC_ANALYTICS_ID=G-XXXXXXXXXX

# =============================================================================
# AUTHENTICATION
# =============================================================================
NEXTAUTH_SECRET=generate-with-openssl-rand-base64-32

# =============================================================================
# SENTRY (Error Tracking)
# =============================================================================
NEXT_PUBLIC_SENTRY_AUTH_TOKEN=your-sentry-auth-token
SENTRY_ORG=your-org-slug
SENTRY_PROJECT=your-project-slug
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# =============================================================================
# EMAIL (Contact Form)
# =============================================================================
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=SG.your-sendgrid-api-key
SMTP_FROM_EMAIL=noreply@hairsalontemplate.com
SMTP_FROM_NAME=Hair Salon Template

# =============================================================================
# PAYMENTS (Stripe - if implementing booking payments)
# =============================================================================
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_key
STRIPE_SECRET_KEY=sk_test_your_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# =============================================================================
# APPOINTMENTS (Calendar Integration)
# =============================================================================
CALENDAR_SERVICE=google_calendar
GOOGLE_CALENDAR_ID=your-calendar-id@group.calendar.google.com
GOOGLE_SERVICE_ACCOUNT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
GOOGLE_PRIVATE_KEY=your-private-key-from-service-account.json

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=info
LOG_FORMAT=json

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_BLOG=true
ENABLE_BOOKINGS=true
ENABLE_SEARCH=true
ENABLE_ANALYTICS=true
